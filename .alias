# ~/.alias

export LA_ALIAS_LOADED=$(($LA_ALIAS_LOADED+1))

# commonly used
alias _='sudo'
alias m='make'
alias mj8='make -j8'
alias _p='proxychains'
alias py='python3'
alias o='xdg-open'
alias grep='grep --color=auto'

# freqently used path
alias n='cd ~/documents/bullet'
alias u='cd ~/documents/ronin'

# ls.
alias l='ls --color=auto'
alias ls='ls --color=auto'
alias ll='ls -l'
alias la='ls -a'

# Neovim.
alias v='nvim'
alias vim='nvim'
alias vin='nvim --noplugin'

# Tmux.
alias t='tmux'
alias ta='tmux attach'
alias ts='tmux-select-sessions'

## systemd alias
alias sstart='systemctl start'
alias sstop='systemctl stop'
alias sre='systemctl restart'
alias sstat='systemctl status'
alias jour='journalctl -a -f'

## systemd --user alias
alias usstart='systemctl --user start'
alias usstop='systemctl --user stop'
alias usre='systemctl --user restart'
alias usstat='systemctl --user status'
alias ujour='journalctl --user -a -f'

# package manager
alias felix='sudo pacman -Syu'

## git alias
alias gl='git log --color --graph --decorate -M --pretty=oneline --abbrev-commit -M'
alias gp='git push'
alias gpl='git pull'
alias gf='git fetch'
alias gs='git status'
alias ga='git add'
alias gd='git diff'
alias gcm='git commit'
alias gco='git checkout'
alias gst='git stash'
alias grs='git restore --staged'

## cd alias
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'
