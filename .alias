# ~/.alias

export LA_ALIAS_LOADED=$(($LA_ALIAS_LOADED+1))

# commonly used
alias _='sudo ' # keep aliases, https://unix.stackexchange.com/a/349290
alias m='make'
alias mj8='make -j8'
alias _p='proxychains'
alias py='python3'
alias o='xdg-open'
alias grep='grep --color=auto'
alias g='grep --color=auto -r'

# freqently used path
alias n='cd ~/documents/bullet'
alias u='cd ~/documents/ronin'
alias ws='cd ~/workspace/$(ls ~/workspace | fzf)'

# ls.
alias l='ls --color=auto'
alias ls='ls --color=auto'
alias ll='ls -l'
alias la='ls -a'

# Neovim.
alias v='nvim'
alias vim='nvim'
alias vin='nvim --noplugin'

# Tmux.
alias t='tmux'
alias ta='tmux attach'
alias ts='tmux-select-sessions'
alias reset='reset; tmux clear-history'

# Package manager
alias felix='sudo pacman -Syu'

## git alias
alias gl='git log --color --graph --decorate -M --pretty=oneline --abbrev-commit -M'
alias gp='git push'
alias gpl='git pull'
alias gf='git fetch'
alias gs='git status'
alias ga='git add'
alias gd='git diff'
alias gcm='git commit'
alias gco='git checkout'
alias gst='git stash'
alias grs='git restore --staged'
alias gr='cd $(git rev-parse --show-toplevel)' # cd to git root
alias gg='git grep'

## cd alias
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'

# SystemD
# NOTE: The magic number *6* is the lines of "systemctl list-units" legend.
# After writing this I found github.com/joehillen/sysz :'(
list_units() {
    systemctl $1 list-units --state=running,failed,waiting | \
    head -n -6 | \
    fzf --header-lines 1 \
        --accept-nth=1 \
        --no-hscroll \
        --preview="SYSTEMD_COLORS=1 systemctl $1 status {1}" \
        --preview-window=down
}

## --system
alias s='systemctl'
alias sps="list_units"
alias sstart='s start $(sps)'
alias sstop='s stop $(sps)'
alias sre='s restart  $(sps)'
alias jour='journalctl --unit $(sps)'

## --user
alias us='systemctl --user' # TODO: conflicts with ronin
alias ups="list_units --user"
alias ustart='s start $(sps)'
alias ustop='us stop $(sps)'
alias ure='us restart  $(sps)'
alias ujour='journalctl --user --unit $(ups)'

# Git-delta
alias diff=delta

