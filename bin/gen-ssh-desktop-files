#!/bin/bash

gen() {
    HOST=$1
    PRETTY_HOST=$2

    cat <<EOF > ~/.local/share/applications/ssh-$HOST.desktop
# Auto generated by $0, DO NOT EDIT!
[Desktop Entry]
Type=Application
Name=SSH to $PRETTY_HOST
Comment=Connect to $PRETTY_HOST via SSH
Exec=ssh $HOST
Icon=network-wired
Terminal=true
Categories=Network;RemoteAccess;
Keywords=SSH;$HOST;$PRETTY_HOST
EOF

}

HOSTS=(rpi3 tcc ds218p n100)
PRETTY_HOSTS=(
    'Raspberry Pi 3'
    'Tencent Cloud'
    'Synology 218+'
    'XCY N100'
)

for i in ${!HOSTS[@]}; do
    echo -e "Generating desktop file for ${HOSTS[i]}:\t${PRETTY_HOSTS[i]}"
    gen "${HOSTS[i]}" "${PRETTY_HOSTS[i]}"
done
