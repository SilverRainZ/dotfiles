#!/bin/sh
# LA's replacement of xdg-open.

URL=$1

if [[ "$OSTYPE" == "linux-gnu"* ]]; then
    # TODO: Detect sway
    sleep 0.2 && swaymsg workspace "1.web: ðŸŒ" 1>/dev/null &
    FF="firefox"
elif [[ "$OSTYPE" == "darwin"* ]]; then
    FF="/Applications/Firefox.app/Contents/MacOS/firefox"
fi

$FF --new-tab $URL
